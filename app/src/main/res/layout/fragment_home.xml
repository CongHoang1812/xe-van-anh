<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hambuger_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".ui.home.HomeFragment">



    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarStyle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/hambuger_menu_2"
        android:layout_width="54dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- CardView chứa ảnh đại diện -->
    <androidx.cardview.widget.CardView
        android:id="@+id/avatarCard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar_home">

        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            tools:ignore="ContentDescription,ImageContrastCheck" />
    </androidx.cardview.widget.CardView>

    <!-- TextView: Xin chào -->

    <!-- TextView: Bạn muốn đi đâu -->

    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="Xin chào: user name"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Bạn muốn đi đâu?"
        android:textColor="@color/deep_purple_500"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/greetingText"
        app:layout_constraintTop_toBottomOf="@id/greetingText"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="15dp"
            android:src="@drawable/ic_message"
            app:tint="@color/deep_purple_300" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_home"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue_3"

            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_banner"
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager2"
                    android:layout_width="match_parent"
                    android:layout_height="206dp"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progressBarSlider"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dotIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:dotsColor="@color/lightGrey"
                    app:dotsCornerRadius="8dp"
                    app:dotsSize="6dp"
                    app:dotsSpacing="2dp"
                    app:dotsWidthFactor="2.5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:selectedDotColor="@color/deep_purple_300"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="80dp"
                    android:background="@drawable/edit_bg_home"
                    android:elevation="4dp"
                    android:padding="4dp"
                    android:src="@drawable/outline_repeat_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.396"
                    app:tint="@color/deep_purple_500" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:background="@drawable/white_bg"
                    android:elevation="3dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.333"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:text="@string/h_nh_tr_nh"
                            android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_no_active"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnOneWay"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:background="@drawable/btn_active"
                                android:drawableStart="@drawable/outline_line_end_arrow_notch_24"
                                android:elevation="0dp"
                                android:minWidth="100dp"
                                android:outlineProvider="none"
                                android:paddingHorizontal="8dp"
                                android:text="Một chiều"
                                android:textAllCaps="false"
                                android:textColor="@android:color/system_accent1_700"
                                android:textSize="11sp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnRoundTrip"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/btn_no_active"
                                android:drawableStart="@drawable/outline_compare_arrows_24"
                                android:elevation="0dp"
                                android:minWidth="100dp"
                                android:outlineProvider="none"
                                android:padding="8dp"
                                android:paddingHorizontal="8dp"
                                android:text="Khứ hồi"
                                android:textAllCaps="false"
                                android:textColor="@color/deep_purple_500"
                                android:textSize="11sp"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>


                    </LinearLayout>

                    <EditText
                        android:id="@+id/etDeparture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_bg_home"
                        android:drawableStart="@drawable/ic_trip_origin_24"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/blue"
                        android:focusable="false"
                        android:hint="Xuất phát"
                        android:inputType="none"
                        android:padding="12dp"
                        android:textColorHint="#434343"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/etDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edit_bg_home"
                        android:drawableStart="@drawable/ic_trip_origin_24"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/heart_red"
                        android:focusable="false"
                        android:hint="Điểm đến"
                        android:inputType="none"
                        android:padding="12dp"
                        android:textColorHint="#434343"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/etDepartureDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_bg_home"
                            android:drawableStart="@drawable/ic_calendar_month_24"
                            android:drawablePadding="8dp"
                            android:focusable="false"
                            android:hint="Ngày đi"
                            android:padding="12dp"
                            android:textColorHint="#434343"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/etReturnDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_bg_home"
                            android:drawableStart="@drawable/ic_calendar_month_24"
                            android:drawablePadding="8dp"
                            android:focusable="false"
                            android:hint="Ngày về"
                            android:padding="12dp"
                            android:textColorHint="#434343"
                            android:textSize="12sp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_search"
                        style="@android:style/Widget.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/btn_bg"
                        android:text="Tìm vé ngay"


                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/white" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25">


                    <ImageView
                        android:id="@+id/imageView23"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/verified_yellow" />

                    <TextView
                        android:id="@+id/textView94"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:text="Chắc chắn có chỗ"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="24"
                    android:paddingLeft="2dp">


                    <ImageView
                        android:id="@+id/imageView24"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/headset_mic_yellow" />

                    <TextView
                        android:id="@+id/textView95"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:text="Hỗ trợ 24/7"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="24">


                    <ImageView
                        android:id="@+id/imageView234"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/discount_yellow" />

                    <TextView
                        android:id="@+id/textView944"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:text="Nhiều ưu đãi"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="27">


                    <ImageView
                        android:id="@+id/imageView244"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/monetization_on_yellow" />

                    <TextView
                        android:id="@+id/textView1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:text="Thanh toán đa dạng"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:text="Tìm kiếm gần đây"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recent_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_recent_search" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_banner_2" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:paddingVertical="8dp"
                android:text="Tuyến xe hot"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"

                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_route"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_display_route" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_route_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_display_route" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:paddingVertical="8dp"
                android:text="Dịch vụ"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_host_service"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_hot_service" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:paddingVertical="8dp"
                android:text="Tin tức"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_update_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_update_new" />

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/thank2" />

            <include
                android:id="@+id/includeToolbar"
                layout="@layout/include_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="100dp" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
