<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- RadioButton chọn xe -->
    <RadioButton
        android:id="@+id/rbSelectBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <!-- Nội dung thông tin xe -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <!-- Tên + biển số -->
        <TextView
            android:id="@+id/tvBusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limousine 34 chỗ - 29B-12345"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <!-- Loại xe -->
        <TextView
            android:id="@+id/tvBusType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giường nằm | 34 ghế"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="2dp"/>

        <!-- Trạng thái -->
        <TextView
            android:id="@+id/tvBusStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Chưa gán"
            android:textSize="13sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

</LinearLayout>
