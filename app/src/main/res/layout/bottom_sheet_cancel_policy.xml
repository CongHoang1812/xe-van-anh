<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTitle"
        android:text="Chính sách hủy vé"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvContent"
        android:text="• Phí hủy được tính trên giá gốc, không giảm khuyến mãi.\n• Phí hủy không vượt quá số tiền bạn đã thanh toán.\n• Không hoàn tiền nếu hủy sau thời gian quy định."
        android:textSize="16sp"
        android:lineSpacingExtra="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkGrey" />

    <Button
        android:id="@+id/btnDismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Đã hiểu"
        android:textAllCaps="false"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white"/>
</LinearLayout>
