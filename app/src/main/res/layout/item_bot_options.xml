<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="start"
    android:padding="8dp">

    <!-- Bot Avatar -->
    <androidx.cardview.widget.CardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:cardCornerRadius="32dp">
        <ImageView
            android:id="@+id/ivBotAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chatbotavt"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="48dp"
        android:maxWidth="280dp">

        <TextView
            android:id="@+id/tvBotMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bot_message_background"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:text="Tin nhắn bot với tùy chọn" />

        <!-- Options Container -->
        <LinearLayout
            android:id="@+id/llOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnOption1"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Hài lòng"
                android:textSize="12sp"
                android:minHeight="32dp" />

            <Button
                android:id="@+id/btnOption2"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không hài lòng"
                android:textSize="12sp"
                android:minHeight="32dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvBotTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp"
            android:text="12:34" />

    </LinearLayout>

</LinearLayout>
