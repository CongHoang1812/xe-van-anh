<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_ticket_price_my_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/title_my_android_app"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/title_branium"
        android:textAppearance="?attr/textAppearanceTitleSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_ticket_price_my_ticket"
        app:layout_constraintTop_toBottomOf="@+id/tv_ticket_price_my_ticket" />



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="165dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/logo3"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/tv_ticket_price_my_ticket"
            app:layout_constraintStart_toStartOf="@+id/tv_ticket_price_my_ticket"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/des_ba_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>